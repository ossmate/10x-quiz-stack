---
import Layout from "../../layouts/Layout.astro";
import { ResetPasswordForm } from "../../components/auth/ResetPasswordForm";

// Supabase sends tokens in the URL hash (fragment), not query params
// We need to handle this on the client side since Astro doesn't have access to the hash
// For now, we'll pass an empty token and let the React component parse it from window.location.hash
const token = "";
---

<Layout title="Reset Password - 10x Quiz Stack" showHeader={false}>
  <ResetPasswordForm client:load token={token} />
</Layout>
